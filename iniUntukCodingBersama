void playerMove(char *spaces, char player){
    int number;
    do{
        cout<<"Masukkan angka pilihan anda antara 1 sampai 9 untuk memulai permainan ini : \n";    
        cin>>number;
        number--;
        if(spaces[number] == ' '){                //ini untuk menginput char yang dilakukan pemain. setelah memilih nomor antara 1 sampai 9,
            spaces[number]== player;              //program akan mengeluarkan char 'X' sebagai tanda milik pemain. 
            break;
        }
    }while(!number > 0 || !number < 8);            //ini maksudnya adalah program hanya akan berjalan jika angka yang dimasukkan antara 1 sampai 9


};

